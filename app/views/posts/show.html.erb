<%= render "layouts/header" %>
<div class="container">
  <%= render "users/form" %>
  
  <div class="container">
    <div class="row">
      <div class='col-5'>
          <div class="mt-4"><%= image_tag @post.post_image, size:'360x250' %></div>
          <div class="row">
          <div class="col mt-3"><%= @post.round_day %></div>
          <div class="col">
            <%= link_to edit_post_path(@post) do %>
            <i class="fas fa-edit fa-3x text-dark" style="position:absolute; margin-left:10px; margin-top:8px;"></i>
            <% end %>
          </div>
          </div>
          <div class="mt-3"><%= @post.round_place %></div>
          <div class="col-10" style="border-bottom: 1px solid black;"></div>
          <div class="row mt-3" style="font-size:24px;">
            OUT：<div class=""style="font-weight:bold;"><%= @post.in_score %></div>&emsp;
            IN：<div class="" style="font-weight:bold;"><%= @post.out_score %></div>&emsp;
            TOTAL：<div class=""style="font-weight:bold;"><%= @post.total_score %></div>
          </div>
      </div>
      <div class='post-box col-4 mt-3'>
        <p class='p-title col mt-3'>Ψ　<%= @post.title %>　Ψ</p>
        <p class='p-body mt-4'><%= @post.body %></p>
      </div>
    
  </div>
    
  

</div>