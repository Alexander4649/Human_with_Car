<%= render "layouts/header" %>
<div class="container">
  <%= render "users/form" %>
  
  <div class="container">
    <div class="row">
      <div class='col-5'>
          <div class="mt-4"><%= image_tag @post.post_image, size:'360x250' %></div>
          <div class="row">
          <div class="col mt-3"><%= @post.round_day %></div>
          <div class="col">
            <%= link_to edit_post_path(@post) do %>
            <i class="fas fa-edit fa-2x text-dark" style="position:absolute; margin-top:25px;"></i>
            <% end %>
          </div>
          </div>
          <div class="mt-3"><%= @post.round_place %></div>
          <div class="col-10" style="border-bottom: 1px solid black;"></div>
   
      </div>
      <div class='post-box col-6 mt-3'>
          <div class="row" style="font-size:22px;">
            OUT：<div class=""style="font-weight:bold;"><%= @post.in_score %></div>&emsp;
            IN：<div class="" style="font-weight:bold;"><%= @post.out_score %></div>&emsp;
            TOTAL：<div class=""style="font-weight:bold;"><%= @post.total_score %></div>
          </div>
        <p class='p-title col mt-3'>Ψ　<%= @post.title %>　Ψ</p>
        <p class='p-body mt-4'><%= @post.body %></p>
      </div>
    </div>
  </div>
      
    <div class="container mt-3 ml-5">
      <div class='row ml-auto align-self-start'>
        <table>
          <tbody>
              <% @post_comments.each do |post_comment| %>
              <tr>
                <td style="border: none;">
                  <%= link_to user_path(post_comment.user) do %>
                    <%= image_tag post_comment.user.get_profile_image, size: "50x50" %><br>
                    <%= post_comment.user.name %>
                  <% end %>
                </td>
                <td style="border: none;"><%= post_comment.comment %></td>
                <td style="border: none;">
                  <% if post_comment.user == current_user %>
                    <%= link_to "Destroy", post_post_comments_path(@post, @post_comment), method: :delete,class: "btn btn-sm btn-danger pull-right" %>
                  <% end %>
                </td>
              </tr>
              <% end %>
          </tbody>
        </table>
         
      
        <div class="row">
          <%= form_with(model:[@post, @post_comment], local:true) do |f| %>
          <div class="row ml-auto">
          <div class="col"><%= f.text_area :comment ,size: "50x4"  %></div>
          <div class='col mt-4'><%= f.submit "コメント",class: "button btn-lg" %></div>
          </div>
          <% end %>
        </div>
      </div>
    </div>