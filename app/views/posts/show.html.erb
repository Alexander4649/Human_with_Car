<%= render "layouts/header" %>
<div class="container">
  <%= render "users/form" %>
  
  <div class="container">
    <div class="row">
      <div class='col-5'>
          <div class="mt-4"><%= image_tag @post.post_image, size:'360x250' %></div>
          <div class="mt-3"><%= @post.round_day %></div>
          <div class="mt-3"><%= @post.round_place %></div>
          <div class="col-10" style="border-bottom: 1px solid black;"></div>
          <div class="row mt-3" style="font-size:24px;">
            OUT：<div class=""style="font-weight:bold;"><%= @post.in_score %></div>&emsp;
            IN：<div class="" style="font-weight:bold;"><%= @post.out_score %></div>&emsp;
            TOTAL：<div class=""style="font-weight:bold;"><%= @post.total_score %></div>
          </div>
      </div>
      <div class='col-4 mt-3'><%= @post.title %>
        <div class='mt-5'><%= @post.body %></div>
      </div>
    
  </div>
    
  

</div>