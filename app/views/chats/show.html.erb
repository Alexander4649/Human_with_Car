<%= render "layouts/header" %>
<div class="container">
  <div class="col chat_for_name" style="width: fit-content;">
    <span class="name_strong">『&nbsp;<%= @user.name %>&nbsp;』</span>さんとのチャットルーム
  </div>
</div>
  
<div class="container offset-2 chats" style="width:900px;">
  
  <% @chats.each do |chat| %>
    <% if chat.user_id == current_user.id %>
      <div class="col text-left mycomment">
        <span class="my_picture">
          <span class="my_picture_size">
            <%= link_to user_path(current_user) do %>
            <%= image_tag current_user.get_profile_image, size: "50x50" %>
            <% end %>
          </span>
        </span>
        <span class="ml-1" style="width: fit-content; background-color: #C0C0C0;"><%= chat.message %></span>
        <%= link_to chats_path(chat.id), method: :delete do %>
        <i class="fas fa-trash-alt text-dark"></i>
        <% end %>
      </div>
    <% else %>
    
      <div class="col-12 mt-1 text-right">
        <span class="mr-1 says"><%= chat.message %></span>
        <span class="fukidasi">
          <span class="faceicon">
            <%= link_to user_path(@user) do %>
            <%= image_tag @user.get_profile_image, size: "50x50" %>
            <% end %>
          </span>
        </span>
      </div>
    <% end %>
  <% end %>
</div>
<div class="container offset-4 chat_form">
  <div class="col">
        <%= form_with model: @chat, remote: true do |f| %>
        <%= f.text_field :message %>
        <%= f.hidden_field :room_id %>
        <%= f.submit "送信", class:"button btn-sm" %>
        <% end %>
  </div>
</div>