<div class="container offset-2 chats" style="width:1000px; height: 480px;">
<div class="scroll_chat">
  <% chats.each do |chat| %>
    <% if chat.user_id == current_user.id %>
      <div class="col text-left mycomment">
          <span class="my_picture_size">
            <%= link_to user_path(current_user) do %>
            <%= image_tag current_user.get_profile_image, size: "50x50" %>
            <% end %>
          </span>
        <span class="says"><%= chat.message %></span>
        <%= link_to chat_destroy_path(room.id, chat.id), method: :delete, remote:true do %>
        <i class="fas fa-trash-alt text-dark ml-3"></i>
        <% end %>
      </div>
    <% else %>
    
      <div class="col-12 mt-1 text-right">
        <span class="mt-1 mr-1 says"><%= chat.message %></span>
        <span class="fukidasi">
          <span class="faceicon mt-1">
            <%= link_to user_path(user) do %>
            <%= image_tag user.get_profile_image, size: "50x50" %>
            <% end %>
          </span>
        </span>
      </div>
    <% end %>
  <% end %>
</div>
</div>