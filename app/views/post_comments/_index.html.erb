<table class='row ml-auto align-self-start'>
  <tbody>
    <% post.post_comments.each do |post_comment| %>
    <tr>
      <td nowrap style="border: none; text-align: center;">
        <%= link_to user_path(post_comment.user) do %>
          <%= image_tag post_comment.user.get_profile_image, size: "50x50" %><br>
          <span class="text-dark" style="font-size:11px;"><%= post_comment.user.name %></span>
        <% end %>
      </td>
      <td style="border: none;"><u><%= post_comment.comment %></u></td>
      <td style="border: none;">
        <% if post_comment.user == current_user %>
          <%= link_to post_post_comment_path(post, post_comment), method: :delete, remote:true do %>
          <i class="fas fa-trash-alt text-dark"></i>
          <% end %>
        <% end %>
      </td>
    </tr>
    <% end %>
  </tbody>
</table>