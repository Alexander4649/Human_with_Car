<div class= "backgroud_image_login">
  
  <%= render "homes/logo" %>
  
  <div class="login">
    <h1 class="login-text">Log in</h1>
    
  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  
    
    <div class="login-email-field">
      <%= f.label :メールアドレス %>
      <%= f.email_field :email, autofocus: true, autocomplete: "email" ,:size=>"30x10",class: "mx-5" %>
    </div>
    
    <div class="login-password-field">
      <%= f.label :パスワード %>
      <%= f.password_field :password, autocomplete: "current-password",:size=>"20x10",class: "mx-5" %>
    </div>

  <% if devise_mapping.rememberable? %>
    <div class="login-remember-field">
      <%= f.check_box :remember_me %>
      <%= f.label :記憶する %>
    </div>
  <% end %>

  <div class="login-actions">
    <%= f.submit "　ログイン　", class: "button" %>
  </div>
 <% end %>
 <div class= "login-render-actions">
   <%= render "devise/shared/links" %>
  </div>
</div>
