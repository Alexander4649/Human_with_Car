<% groups.each do |group| %>
<table class="table table-borderless" style="font-size:13px;">
  <thead>
    <th colspan="3"></th>
    <th style="border-bottom: bold solid;">グループ名</th>
    <th>オーナー名</th>
    <th>ラウンド日</th>
    <th>ラウンド場所</th>
    <th>メンバー数</th>
    <th colspan="2"></th>
    <th colspan="2"></th>
  </thead>
  
  <tbody>
    <% link_to group_path(group) do %>
    <td><%= image_tag group.get_group_image, size:'110x110' %></td>
    <td><%= group.group_name %></td>
    <% end %>
    <td><%= group.owner.name %></td>
    <td><%= group.round_day %></td>
    <td><%= group.rounf_place %></td>
    <td><%= group.users.count %></td>
    <td>
      <%# if current_user != group.join %>
        <%#= link_to "参加する", group_join_path(group) , method: :post ,class: "btn btn-sm btn-info" %>
      <%# else %>
        <%#= link_to "退会する", group_path(group) , method: :delete ,class: "btn btn-sm btn-danger" %>
      <%# end %>
    </td>
    <td>
      <%# if group.owner_id = current_user.id %>
      <%#= link_to "Delete",group_path(group),method: :delete, "data-confirm" => "本当に削除しますか？",class: "btn btn-sm btn-danger" %>
      <%# end %>
    </td>
  </tbody>
</table>
<% end %>