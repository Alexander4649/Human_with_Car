<% if current_user.id != group.owner_id %>
 <% if group.users.include?(current_user) %>
  <%= link_to "退会する", group_path(group) , method: :delete ,class: "btn btn-sm btn-danger",remote: true %>
<% else %>
  <%= link_to "参加する", group_join_path(group) , method: :post ,class: "btn btn-sm btn-primary",remote: true %>
 <% end %>
<% end %>