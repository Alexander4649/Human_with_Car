<div class="row" style="font-size:14px;">
  <div class="mt-3">
    <%= link_to user_path(@user) do %>
    <%= image_tag @user.get_profile_image, size:'110x110' %>
    <% end %>
  </div>
  <div class="mt-3 ml-3">アカウント名： <%= @user.name %>
    <div class="mt-3" style="display: inline">
      <div class="row">
        <div class="col-sm-auto text-left" id="follow_count">フォロー数&emsp;：<%= link_to @user.follows.count, user_follows_path(@user) %>人</div>
        <div class="col-sm-auto" style="position:absolute; margin-left:165px;">ラウンド地域：<%= @user.round_area %></div>
    </div>
    
    <div class="col-sm-auto">
          <%= link_to edit_user_path(current_user),class: 'text-dark md-3' do %>
          <i class="fas fa-address-card fa-3x"style="position:absolute; margin-left:350px;"></i>
          <% end %>
    </div>
    
    <div class="mt-3" style="display: inline">
      <div class="row">
        <div class="col-sm-auto text-left" id="followers_count">フォロワー数：<%= link_to @user.followers.count, user_followers_path(@user) %>人</div>
        <div class="col-sm-auto" style="position:absolute; margin-left:165px;">平均スコア&emsp;：<%= @user.average_score %></div>
      </div>
    </div>
    
    
    <div class="mt-3" style="display: inline">
      <div class="row">
        <div class="col-sm-12 text-left">投稿数&emsp;&emsp;&emsp;：<%= @user.posts.count %>件</div>
        <div class="col-sm-auto" style="position:absolute; margin-left:166px;">ゴルフ経験&emsp;：<%= @user.experience %></div>
      </div>
    </div>
    
    <div class="mt-3" style="display: inline">
     <div class="row">
       <div class="col mt-1" id="follow_remote"><%= render "relationships/follow",user: @user %></div>
       <% if current_user != @user && current_user.follow_by?(@user) && @user.follow_by?(current_user) %>
       <%= link_to 'DMを送る', chat_path(@user.id), class: "button_DM btn-sm mt-1" %>
       <% end %>
     </div>
    </div>
     
  </div>
  </div>
</div>