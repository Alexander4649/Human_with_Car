<% if group.users.include?(current_user) %>
    <%= form_with(model:[group, group_comment],local:false) do |f| %>
    <div class="row">
        <div class="col mt-4"><%= f.text_area :comment ,placeholder: "こちらから入力して下さい",size: "50x4" %></div>
        <div class='col mt-4'><%= f.submit "送信",class: "button btn-lg" %></div>
    </div>
    <% end %>
<% end %>