<div class="scroll">
<% group.group_comments.each do |group_comment| %>
  <% if group_comment.user == current_user %>
    <div class="row">
      <div class="col-1 mt-2"><%= image_tag group_comment.user.get_profile_image, size: "50x50" %></div>
      <div class="col-9 mt-3">
        <u><%= group_comment.comment %></u>
        <%= link_to group_group_comment_path(group, group_comment), method: :delete, remote:true do %>
        <i class="fas fa-trash-alt text-dark ml-3"></i>
        <% end %>
      </div>
    </div>
  <% else %>
    <div class="row">
      <div class="col-10 text-right mt-4"><u><%= group_comment.comment %></u></div>
      <div class="col ml-auto mt-2"><%= image_tag group_comment.user.get_profile_image, size: "50x50" %></div>
    </div>
  <% end %>
<% end %>
</div>

<%#= paginate @group_comments %>

