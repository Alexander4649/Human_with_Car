<div class="scroll" id="area">
<% group.group_comments.each do |group_comment| %>
<% if group_comment.user == current_user || current_user.name == "管理者" %>
    <div class="row change-element-style-group_comment">
      <div class="col-1 mt-2"><%= image_tag group_comment.user.get_profile_image, size: "40x40" %></div>
      <div class="col-9 mt-3">
        <u><%= group_comment.comment %></u>
        <%= link_to group_group_comment_path(group, group_comment), method: :delete, remote:true, class: "element-group_comment" do %>
          <i class="fas fa-trash-alt text-dark ml-3"></i>
        <% end %>
      </div>
    </div>
  <% else %>
    <div class="row">
      <div class="col-10 text-right mt-3 pr-1"><u><%= simple_format(group_comment.comment) %></u></div>
      <div class="col mt-2"><%= image_tag group_comment.user.get_profile_image, size: "40x40" %></div>
    </div>
  <% end %>
<% end %>
</div>