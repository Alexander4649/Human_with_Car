<header class="shadow-sm">
  <nav class="navbar navbar-expand-lg navbar-light">
    <div class="ml-auto"><%= render "layouts/logo" %></div>
    <div class='container px-5 px-sm-0'>
      <a class="navbar-brand"></a>
      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarNavDropdown">
        <ul class="navbar-nav ml-auto">
          
          <% if user_signed_in? %>
          
          <%= render "layouts/notification" %>
          <%= render "layouts/search" %>
            
            <li class="nav-item">
              <%= link_to user_path(current_user),class: 'nav-link text-dark md-5' do %>
                <i class="fas fa-golf-ball"></i> Home
              <% end %>
            </li>
            
            <% if current_user.admin? %>
            <li class="nav-item">
                <%= link_to users_path, class: 'nav-link text-dark' do %>
                  <i class="fas fa-users"></i>Users
                <% end %>
              </li>
             <% end %>
            
            <li class="nav-item">
              <%= link_to new_post_path,class: 'nav-link text-dark' do %>
                <i class="fas fa-paper-plane"></i> Post
              <% end %>
            </li>
            
            <li class="nav-item">
              <%= link_to posts_path,class: 'nav-link text-dark' do %>
                <i class="fas fa-list"></i> List
              <% end %>
            </li>
            
            <li class="nav-item">
              <%= link_to post_bookmarks_path(current_user), class: 'nav-link text-dark' do %>
                <i class="far fa-bookmark"></i> Like
              <% end %>
            </li>
            
            <li class="nav-item">
              <%= link_to groups_path,class: 'nav-link text-dark' do %>
                <i class="fas fa-user-friends"></i> Group
              <% end %>
            </li>
            
            <li class="nav-item">
              <%= link_to destroy_user_session_path, method: :delete, class: 'nav-link text-dark' do %> 
                <i class="fas fa-sign-out-alt"></i> Log out
              <% end %>
            </li>
            
          <% end %>
        </ul>
      </div>
    </div>
  </nav>
</header>
